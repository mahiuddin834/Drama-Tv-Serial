<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/primary"
       android:gravity="center_horizontal"
       android:padding="10dp"
       >

       <androidx.cardview.widget.CardView
           android:layout_width="100dp"
           android:layout_height="100dp"
           app:cardCornerRadius="10dp"


           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/logo"
               />

       </androidx.cardview.widget.CardView>

       <TextView
           android:id="@+id/headerName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Indian Drama and TV Serial"
           android:textSize="20dp"
           android:layout_marginTop="5dp"
           android:textColor="@color/white"
           />



       <TextView
           android:id="@+id/marqueeText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5sp"
           android:ellipsize="marquee"
           android:marqueeRepeatLimit="marquee_forever"
           android:scrollHorizontally="true"
           android:singleLine="true"
           android:text="Hello guys !! Welcome to Trusted Indian All TV Serial Library. Daily new episodes of All Indian TV serials will be updated regularly. So stay tuned to enjoy new hot TV serials."
           android:textSize="15sp"
           android:textColor="@color/white"
           android:textStyle="normal" />


   </LinearLayout>




</LinearLayout>